{
	"name": "@gjbkz/gojabako.zone",
	"homepage": "https://gojabako.zone/",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"test": "run-s test:*",
		"test:type": "tsc --noEmit",
		"test:unit": "tsm-test src",
		"playwright": "playwright test",
		"dev": "run-p build:meta pageList dev:*",
		"dev:css": "node --import=@nlib/tsm src/cli/cssTypes.ts --watch",
		"dev:stories": "node --import=@nlib/tsm src/cli/stories.ts --watch",
		"dev:next": "next",
		"https": "run-p build:meta dev:css dev:stories https:*",
		"https:next": "node --import=@nlib/tsm server.ts",
		"build": "run-s build:*",
		"build:meta": "run-p build:meta:*",
		"build:meta:version": "node --import=@nlib/tsm src/cli/version.ts",
		"build:meta:fonts": "node --import=@nlib/tsm src/cli/fonts.ts",
		"build:meta:cssTypes": "node --import=@nlib/tsm src/cli/cssTypes.ts",
		"build:meta:stories": "node --import=@nlib/tsm src/cli/stories.ts",
		"build:next": "next build",
		"pageList": "node --import=@nlib/tsm src/cli/pageList.ts",
		"start": "next start",
		"lint": "run-s lint:*",
		"lint:biome": "npx @biomejs/biome check",
		"lint:css": "stylelint 'src/**/*.css'",
		"encrypt-env": "dotenvx encrypt"
	},
	"dependencies": {
		"@fontsource/noto-sans-jp": "5.1.1",
		"@mdx-js/loader": "3.1.0",
		"@next/mdx": "15.1.7",
		"@nlib/tsm": "1.1.0",
		"@nlib/typing": "3.0.1",
		"@opentelemetry/otlp-transformer": "0.57.2",
		"@opentelemetry/sdk-logs": "0.57.0",
		"@storybook/csf": "0.1.13",
		"@svgr/webpack": "8.1.0",
		"@types/kuromoji": "0.1.3",
		"@types/node": "22.13.4",
		"@types/react": "19.0.7",
		"acorn": "8.14.0",
		"chokidar": "4.0.3",
		"hast-util-from-html": "2.0.3",
		"hast-util-to-string": "3.0.1",
		"kuromoji": "0.1.2",
		"lint-staged": "15.4.3",
		"lowlight": "3.3.0",
		"mdast-util-from-markdown": "2.0.2",
		"mdast-util-to-hast": "13.2.0",
		"mdast-util-to-string": "4.0.0",
		"next": "15.1.0",
		"npm-run-all": "4.1.5",
		"postcss": "8.5.1",
		"postcss-selector-parser": "7.1.0",
		"rehype-highlight": "7.0.2",
		"rehype-katex": "7.0.1",
		"rehype-parse": "9.0.1",
		"rehype-slug": "6.0.0",
		"remark-gfm": "4.0.1",
		"remark-math": "6.0.0",
		"sharp": "0.33.5",
		"typescript": "5.7.3",
		"unist-util-find": "3.0.0",
		"unist-util-visit": "5.0.0",
		"vlq": "2.0.4"
	},
	"renovate": {
		"extends": [
			"github>nlibjs/renovate-config"
		],
		"ignoreDeps": [
			"next"
		]
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@biomejs/js-api": "0.7.1",
		"@biomejs/wasm-nodejs": "1.9.4",
		"@nlib/githooks": "0.2.2",
		"@playwright/test": "1.50.1",
		"stylelint": "16.14.0",
		"stylelint-config-recommended": "14.0.1"
	}
}
