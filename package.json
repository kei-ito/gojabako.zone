{
    "name": "@gjbkz/gojabako.zone",
    "homepage": "https://gojabako.zone/",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "build-meta": "run-s build-meta:*",
        "build-meta:pageList": "node cli/generatePageList.mjs",
        "build-meta:images": "if [[ $(node -v) =~ \"v18\" ]]; then node --no-experimental-fetch cli/generateImages.mjs; else node cli/generateImages.mjs; fi",
        "build-meta:pageImages": "node cli/generatePageImages.mjs",
        "test": "run-s build-meta test:*",
        "test:type": "tsc --noEmit",
        "test:jest": "npx jest",
        "test:deadcode": "ts-prune --ignore \".css.ts|.component.tsx\"",
        "dev": "run-s build-meta dev:*",
        "dev:watch": "run-p dev:watch:*",
        "dev:watch:css": "typed-scss-modules src/components --watch --logLevel info",
        "dev:watch:next": "node server.mjs",
        "dev-next": "run-s build-meta dev-next:*",
        "dev-next:watch": "next dev",
        "build": "run-s build-meta build:*",
        "build:css": "typed-scss-modules src/components --logLevel error",
        "build:next": "next build",
        "start": "NODE_ENV=production node server.mjs",
        "lint": "run-s lint:*",
        "lint:next": "next lint",
        "lint:eslint": "eslint --ext .ts,.tsx,.cjs,.mjs src cli *.mjs"
    },
    "dependencies": {
        "@gjbkz/gojabako.zone-build-images": "0.1.15",
        "@gjbkz/gojabako.zone-build-pagelist": "0.1.15",
        "@gjbkz/gojabako.zone-markdown-component-loader-cjs": "0.1.15",
        "@gjbkz/gojabako.zone-markdown-page-loader-cjs": "0.1.15",
        "@gjbkz/gojabako.zone-markdown-util": "0.1.15",
        "@gjbkz/gojabako.zone-node-util": "0.1.15",
        "@nlib/typing": "0.5.7",
        "jose": "4.11.2",
        "meilisearch": "0.30.0",
        "next": "13.1.1",
        "postcss": "8.4.21",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "sass": "1.57.1"
    },
    "devDependencies": {
        "@gjbkz/gojabako.zone-kuromoji": "0.1.15",
        "@gjbkz/gojabako.zone-markdown-parser": "0.1.15",
        "@nlib/eslint-config": "3.19.6",
        "@nlib/githooks": "0.1.0",
        "@nlib/lint-commit": "0.2.0",
        "@types/jest": "29.4.0",
        "@types/react": "18.0.27",
        "@typescript-eslint/eslint-plugin": "5.50.0",
        "@typescript-eslint/parser": "5.49.0",
        "canvas": "2.11.0",
        "dotenv": "16.0.3",
        "eslint-config-next": "13.1.6",
        "eslint-import-resolver-typescript": "3.5.3",
        "eslint-plugin-jest": "27.2.1",
        "jest": "29.4.1",
        "lint-staged": "13.1.0",
        "npm-run-all": "4.1.5",
        "stackblur-canvas": "2.5.0",
        "ts-jest": "29.0.5",
        "ts-prune": "0.10.3",
        "typed-scss-modules": "7.0.2",
        "typescript": "4.9.5",
        "vercel": "28.14.1"
    },
    "browserslist": [
        ">10%"
    ],
    "jest": {
        "roots": [
            "<rootDir>/src"
        ],
        "moduleFileExtensions": [
            "cjs",
            "mjs",
            "js",
            "jsx",
            "ts",
            "tsx"
        ],
        "preset": "ts-jest/presets/js-with-ts",
        "transformIgnorePatterns": [
            "node_modules/(?!(mdast-|unist-|micromark|parse-entities|character-entities|ccount|escape-string-regexp|markdown-table|lowlight|fault|decode-named-character-reference))"
        ],
        "collectCoverage": true
    },
    "eslintConfig": {
        "extends": [
            "next/core-web-vitals",
            "@nlib/eslint-config"
        ],
        "ignorePatterns": [
            "next-env.d.ts"
        ],
        "rules": {
            "no-unused-private-class-members": "off",
            "import/dynamic-import-chunkname": "off",
            "import/no-relative-parent-imports": "off"
        },
        "overrides": [
            {
                "files": [
                    "*.test.ts"
                ],
                "plugins": [
                    "jest"
                ],
                "env": {
                    "jest/globals": true
                },
                "rules": {
                    "max-lines-per-function": "off"
                }
            },
            {
                "files": [
                    "src/pages/**/*.tsx"
                ],
                "rules": {
                    "import/no-default-export": "off",
                    "import/no-unassigned-import": "off"
                }
            }
        ]
    },
    "lint-staged": {
        "*!(.d).{ts,tsx,js,mjs,cjs,jsx}": "eslint"
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
